<section class="innerHead">
   <div class="top_innerHead">
      <img src="/img/icon_arrow.svg" class="arrowIcon">
      <a href="/" class="breadcrumb">HOME /</a>
      <a href="/countries/index" class="breadcrumb">ALL COUNTRIES /</a>
      <a href="/countries/<%= @country.id %>" class="breadcrumb"><%= @country.name.upcase %> </a>
      <span> / ADD CITY</span>
   </div>
   <div class="bottom_innerHead">
     <h1>Add City to <%= @country.name %></h1>
     <a class="backButton" href="/countries/<%= @country.id %>"><img src="/img/icon_back.svg">Back to <%= @country.name %></a>
   </div>
</section>

<section class="uniquePanel">
   <div class="gridItems">
<div class="formContainer">
<img src="/img/add_city_illustration.png" alt="" class="deleteIllus">

<form class="formRow" action="/cities/new_city" method="post">

<div class="formRow border">
  <label for="name">Enter city name:</label>
  <input type="text" name="name" id="name" value="name" placeholder="Enter City"/>
</div>

<div class="formRow border">
  <label for="country">Country</label>

    <select id="country" name="country_id">


        <option value=<%= @country.id %>><%= @country.name %></option>

  </select>

</div>


<div class="formRow radio">
  <label for="visited">Have you visited the city?</label>
<div class="rowRadio">
  <input type="radio" name="visited" value="1" checked> <span>Yes</span>
    <input type="radio" name="visited" value="0"><span>No</span>
</div>
</div>

<div class="formRow radio">
  <label for="visited">Rating:</label>
<div class="rowRadio">
  <input type="radio" name="rate" value="1" checked> <span>1</span><br>
    <input type="radio" name="rate" value="2"><span>2</span>
      <input type="radio" name="rate" value="3"><span>3</span>
        <input type="radio" name="rate" value="4"><span>4</span>
          <input type="radio" name="rate" value="5"><span>5</span>
</div>
</div>
  <div class="formRow sendPanel">
      <input type="submit" value="Add New City"/>
    </div>


</form>
</div>
</div>
</section>
