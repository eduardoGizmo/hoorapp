<section class="uniquePanel">

  <div class="gridItems">
     <% @countries.each do |country| %>
     <a href="/countries/<%= country.id %>">
        <div class="gridItem">
           <div class="gridImage">
              <img src="" alt="">
           </div>
           <% if country.visited == 1 %>
           <img src="/img/icon_visited.svg" alt="Icon for non visited place" class="iconGrid">
           <% else %>
             <img src="/img/icon_no_visited.svg" alt="Icon for non visited place" class="iconGrid">
           <% end %>
           <div class="gridContainer">
              <div class="gridText">
                 <h3 class="gridName"><%= country.name %></h3>
                 <p class="gridContinent"><%= country.continent %></p>
                 <!-- <span class="gridLink">View Cities</span> -->
              </div>
              <div class="gridReviews">
                 <img src="/img/icon_star.svg" alt="">
                 <p class="gridRate"><%= country.total_rate %></p>
              </div>
           </div>
        </div>
     </a>
     <% end %>
  </div>



</section>
